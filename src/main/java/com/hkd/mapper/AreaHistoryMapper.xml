<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hkd.dao.AreaHistoryDao">

    <select id="selectAreaListByAreaTypeAndCityId" parameterType="com.hkd.mapper.SelectAreaHistoryParam" resultType="com.hkd.domain.AreaHistory">
        <!-- 查询所有区域信息 -->
        select * from area_location where area_type_id = #{areaTypeId}
                                      and city_id = #{cityId}
    </select>
    <select id="selectAreaListByCityId" resultType="com.hkd.domain.AreaHistory">
        select * from area_location where city_id = #{cityId}
    </select>
    <select id="selectAllArea" resultType="com.hkd.domain.AreaHistory">
        select * from area_location
    </select>
</mapper>